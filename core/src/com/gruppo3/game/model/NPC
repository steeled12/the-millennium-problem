package com.gruppo3.game.model;

import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.graphics.g2d.Sprite;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.GL20;
import java.util.ArrayList;
import java.util.List;

public class NPC {
    Texture npcImage;
    Rectangle npcBox;
    SpriteBatch batch;
    List<Sprite> npcList;

    final static NPC npc = new NPC();

    private NPC() {
        this.npcImage = new Texture("NPC.jpg");
        this.npcBox = new Rectangle();

        npcBox.x = 1920 / 2 - 64 / 2;
        npcBox.y = 1080 / 2 - 64 / 2;

        npcBox.width = 64;
        npcBox.height = 64;
    }

    public void create () {
        batch = new SpriteBatch();
        npcList = new ArrayList<>();

        for (int i = 0; i < 5; i++) {
            Sprite npcSprite = new Sprite(npcImage);
            npcSprite.setPosition(100 * i, 100 * i);
            npcList.add(npcSprite);
        }
    }

    public void render () {
        Gdx.gl.glClearColor(0, 0, 0, 1);
        Gdx.gl.glClear(GL20.GL_COLOR_BUFFER_BIT);
        batch.begin();

        for (Sprite npcSprite : npcList) {
            npcSprite.draw(batch);
        }

        batch.end();

        if (Gdx.input.justTouched()) {
            for (Sprite npcSprite : npcList) {
                Rectangle npcBounds = new Rectangle(npcSprite.getX(), npcSprite.getY(), npcSprite.getWidth(), npcSprite.getHeight());
                if (npcBounds.contains(Gdx.input.getX(), Gdx.graphics.getHeight() - Gdx.input.getY())) {
                    System.out.println("Hai cliccato su un NPC!");
                }
            }
        }
    }

    public void dispose () {
        batch.dispose();
    }

    public Texture getNpcImage() {
        return npcImage;
    }

    public Rectangle getNpcBox() {
        return npcBox;
    }

    public static NPC getNpc() {
        return npc;
    }
}



